<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	    xmlns:wuc="clr-namespace:LoginUI.WinUserControl"
		xmlns:uc="clr-namespace:LoginUI.MyUserControls"
        mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="350"
        x:Class="LoginUI.MainWindow"
        Title="LoginUI">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="50"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
	<Grid Grid.ColumnSpan="2" Grid.RowSpan="2">
		<Grid.RowDefinitions>
			<RowDefinition Height="40"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="0*"/>
		</Grid.ColumnDefinitions>
		
		<DockPanel Grid.Column="3" Grid.Row="1" Grid.RowSpan="3" DockPanel.Dock="Right" Background="DarkGray" Width="300"/>
		<DockPanel  Grid.ColumnSpan="3" DockPanel.Dock="Top" Background="Gray" Height="40" />
		
	</Grid>
		<Label FontSize="34">ToDo</Label>
			<wuc:ContentArea  Grid.Column="0" Grid.Row="1" />
	</Grid>
</Window>
